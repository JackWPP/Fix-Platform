# MongoDB连接配置
# 本地MongoDB (需要先安装MongoDB)
# MONGODB_URI=mongodb://localhost:27017/fixplatform

# 在线MongoDB Atlas (推荐用于生产环境)
# 请替换为您自己的MongoDB Atlas连接字符串
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/fixplatform?retryWrites=true&w=majority

# 开发环境默认配置
MONGODB_URI=mongodb://localhost:27017/fixplatform

# JWT密钥 (生产环境请使用强密钥)
JWT_SECRET=your-secret-key-here

# 服务器端口
PORT=5000

# 前端URL配置
CLIENT_URL=http://localhost:3000

# 短信验证码功能开关 (true: 启用, false: 禁用)
ENABLE_SMS_VERIFICATION=false

# 环境模式 (development, production, test)
NODE_ENV=development

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 短信服务配置 (当ENABLE_SMS_VERIFICATION=true时使用)
# SMS_ACCESS_KEY=your-sms-access-key
# SMS_SECRET_KEY=your-sms-secret-key
# SMS_SIGN_NAME=your-sms-sign-name
# SMS_TEMPLATE_CODE=your-sms-template-code

# 生产环境配置示例
# NODE_ENV=production
# LOG_LEVEL=error
# CLIENT_URL=https://your-domain.com
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fixplatform
# JWT_SECRET=your-very-strong-secret-key-for-production
# ENABLE_SMS_VERIFICATION=true
# SMS_ACCESS_KEY=your-production-sms-key
# SMS_SECRET_KEY=your-production-sms-secret